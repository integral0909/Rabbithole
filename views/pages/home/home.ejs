                            "query": {
                                "match": {
                                    "content": {
                                        "query": query
                                    }
                                }
                            }
                    });
                 }            

                 

                 $.ajax({

                        url: '//ec2-54-210-169-119.compute-1.amazonaws.com:9200/news/clip/_search?pretty',
